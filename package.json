{
  "name": "blockchain-app",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:setup": "node -e \"require('./db').initializeDatabase().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); });\"",
    "db:reset": "node scripts/reset-db.js",
    "seed": "node scripts/seed-db.js",
    "clean": "rm -rf node_modules package-lock.json"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "crypto",
    "tracking",
    "portfolio",
    "api",
    "express"
  ],
  "author": "Oluwayemi Oyinlola Michael",
  "license": "MIT",
  "description": "This is a blockchain application that track amount in your portfolios in real-time.",
  "dependencies": {
    "axios": "^1.13.4",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "mysql2": "^3.16.2"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2"
  }
}
