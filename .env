# .env
# Environment variables for Crypto Portfolio App

# ======================================
# DATABASE CONFIGURATION (AMPPS MySQL)
# ======================================

# Database host (localhost for AMPPS)
DB_HOST=localhost

# Database user (root by default for AMPPS)
DB_USER=root

# Database password (empty by default for AMPPS)
DB_PASSWORD=

# Database name
DB_NAME=crypto_portfolio_db

# ======================================
# JWT (JSON WEB TOKEN) CONFIGURATION
# ======================================

# Secret key for signing JWT tokens
# IMPORTANT: Change this to a strong, random string in production!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT token expiration time (e.g., 7d for 7 days)
JWT_EXPIRES_IN=7d

# ======================================
# SERVER CONFIGURATION
# ======================================

# Port for the Express server to listen on
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# CORS allowed origins (comma-separated for production)
# In development, we allow localhost origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ======================================
# SECURITY CONFIGURATION
# ======================================

# Rate limiting - maximum requests per window
RATE_LIMIT_MAX=100

# Rate limiting window in minutes
RATE_LIMIT_WINDOW_MS=15

# Authentication rate limit (stricter for login/register)
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW_MS=15

# ======================================
# API SERVICE CONFIGURATION
# ======================================

# DexPaprika (CoinPaprika) API configuration
# Note: Free tier has rate limits (10 requests per minute)
# If you get an API key, you can use it here
# COINPAPRIKA_API_KEY=your_api_key_here

# Cache TTL for API responses (in milliseconds)
API_CACHE_TTL=300000  # 5 minutes

# ======================================
# APPLICATION FEATURES
# ======================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_DEMO_MODE=false

# Default currency for the application
DEFAULT_CURRENCY=USD

# Exchange rate for USD to NGN (approximate, can be updated from API)
USD_TO_NGN_RATE=1400

# ======================================
# LOGGING CONFIGURATION
# ======================================

# Log level (error, warn, info, debug)
LOG_LEVEL=debug

# Enable/disable SQL query logging
LOG_SQL_QUERIES=false

# ======================================
# SESSION CONFIGURATION
# ======================================

# Session cookie name
SESSION_COOKIE_NAME=token

# Session cookie max age (in milliseconds)
SESSION_MAX_AGE=604800000  # 7 days

# Secure cookies (set to true in production with HTTPS)
COOKIE_SECURE=false

# SameSite cookie policy
COOKIE_SAME_SITE=strict

# ======================================
# FILE UPLOAD CONFIGURATION
# ======================================

# Maximum file upload size (in bytes)
MAX_FILE_UPLOAD_SIZE=10485760  # 10MB

# Allowed file upload types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ======================================
# EMAIL CONFIGURATION (for future features)
# ======================================

# SMTP server for sending emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# EMAIL_FROM=noreply@cryptoportfolio.com

# ======================================
# MONITORING AND ANALYTICS (optional)
# ======================================

# Enable/disable error tracking
ENABLE_ERROR_TRACKING=false

# Error tracking service (e.g., Sentry)
# SENTRY_DSN=your_sentry_dsn

# ======================================
# BACKUP CONFIGURATION
# ======================================

# Automatic database backup (true/false)
ENABLE_AUTO_BACKUP=false

# Backup schedule (cron expression)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Number of backup files to keep
BACKUP_RETENTION_DAYS=7

# ======================================
# ADVANCED DATABASE CONFIGURATION
# ======================================

# Database connection pool settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_WAIT_FOR_CONNECTIONS=true

# Database timezone
DB_TIMEZONE=UTC

# Enable database query logging
DB_DEBUG=false

# ======================================
# FRONTEND CONFIGURATION
# ======================================

# Application name (displayed in browser tab)
APP_NAME=CryptoPortfolio

# Application description
APP_DESCRIPTION=Track and manage your cryptocurrency investments

# Application version
APP_VERSION=1.0.0

# Default theme (light/dark)
DEFAULT_THEME=light

# ======================================
# DEVELOPMENT-ONLY SETTINGS
# ======================================

# Seed database with sample data on startup
SEED_DATABASE=false

# Log all HTTP requests
LOG_HTTP_REQUESTS=true

# Bypass authentication in development (for testing)
# WARNING: Never enable in production!
BYPASS_AUTH=false

# ======================================
# TESTING CONFIGURATION
# ======================================

# Test database name
TEST_DB_NAME=crypto_portfolio_test

# Test JWT secret
TEST_JWT_SECRET=test_jwt_secret

# ======================================
# ENCRYPTION CONFIGURATION
# ======================================

# Bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=10

# Encryption key for sensitive data (if needed)
# ENCRYPTION_KEY=your_encryption_key_here

# ======================================
# NOTIFICATION CONFIGURATION
# ======================================

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=false

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Enable SMS notifications
ENABLE_SMS_NOTIFICATIONS=false

# ======================================
# EXTERNAL SERVICE CONFIGURATION
# ======================================

# Enable/disable external API calls
ENABLE_EXTERNAL_APIS=true

# Fallback to cached data if API fails
USE_API_FALLBACK=true

# API timeout in milliseconds
API_TIMEOUT=10000

# ======================================
# MAINTENANCE MODE
# ======================================

# Enable maintenance mode
MAINTENANCE_MODE=false

# Maintenance message
MAINTENANCE_MESSAGE=The app is undergoing maintenance. Please check back later.

# ======================================
# COMPLIANCE AND LEGAL
# ======================================

# GDPR compliance mode
GDPR_COMPLIANT=false

# Terms of service version
TOS_VERSION=1.0

# Privacy policy version
PRIVACY_POLICY_VERSION=1.0

# ======================================
# PERFORMANCE OPTIMIZATION
# ======================================

# Enable response compression
ENABLE_COMPRESSION=true

# Enable HTTP/2
ENABLE_HTTP2=false

# Cache static assets
CACHE_STATIC_ASSETS=true

# Cache duration for static assets (in seconds)
STATIC_ASSETS_CACHE_DURATION=3600

# ======================================
# WEBHOOKS AND INTEGRATIONS
# ======================================

# Webhook URL for external notifications
# WEBHOOK_URL=https://api.example.com/webhook

# Webhook secret for verifying requests
# WEBHOOK_SECRET=your_webhook_secret

# ======================================
# ANALYTICS AND METRICS
# ======================================

# Enable application metrics
ENABLE_METRICS=false

# Metrics collection endpoint
# METRICS_ENDPOINT=/metrics

# Metrics collection interval (in seconds)
METRICS_INTERVAL=60